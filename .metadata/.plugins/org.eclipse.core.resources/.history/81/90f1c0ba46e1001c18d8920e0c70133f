package br.com.serratec.Services;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import br.com.serratec.Exceptions.ProdutoNaoEcontradoException;
import br.com.serratec.Repositorios.ProdutoRepositorio;
import br.com.serratec.model.Produto;


@Service
public class ProdutoService {

	@Autowired
	ProdutoRepositorio repositorio;
	
	public List<Produto> listarTudo() {
		return repositorio.findAll();
	}
	
	public Produto listarProduto(String id) throws ProdutoNaoEcontradoException {
		Optional<Produto> optional = repositorio.findById(id);
		if (optional.isEmpty()) {
			throw new ProdutoNaoEcontradoException("O Produto n√£o foi encontrado!");
		}
		return optional.get();
	}
	
}
